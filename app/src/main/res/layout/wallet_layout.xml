<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/card_view"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="My Preponline Points"
                android:gravity="center"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_15ssp"
                android:layout_marginRight="@dimen/_10sdp" />
            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="â‚¹ 0.00"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_below="@+id/header"
                android:textColor="@color/red"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_25ssp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/redeem_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:backgroundTint="@color/red">

        <TextView
            android:id="@+id/download_btn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem Points"
            android:textColor="@color/white"
            android:drawablePadding="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="@dimen/_20ssp"
            android:drawableLeft="@drawable/cart_icon"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:text="Earn PrepOnline Points"
        android:layout_below="@+id/redeem_btn"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/invite_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_below="@+id/text_view"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="0.175"
                android:layout_margin="@dimen/_7sdp"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_friend_icon"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65">

                <TextView
                    android:id="@+id/text_view_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Invite Friends"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15ssp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_below="@+id/text_view_two"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="+1000"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_below="@+id/invite_view"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="0.175"
                    android:layout_margin="@dimen/_7sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:src="@drawable/profile_icon"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65">

                <TextView
                    android:id="@+id/text_view_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Complete your profile"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15ssp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/complete_profile_msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_below="@+id/text_view_three"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="+200"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>